<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TermosUsoActivity"
    tools:layout_editor_absoluteY="25dp">

    <include
        layout="@layout/toolbar"
        android:layout_width="433dp"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/barraRolagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Termos de Uso"
                android:textAlignment="center"
                android:textColor="#eb1b91"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textTermosUso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Este aplicativo pertence à Jéssica Toledo Salles. Sua criação e desenvolvimento são para fins exclusivamente acadêmicos. Todas as informações contidas neste aplicativo são de própria autoria.  "
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>