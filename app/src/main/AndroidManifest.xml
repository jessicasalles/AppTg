<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.apptg.apptg">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.AberturaActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CadastroActivity"
            android:parentActivityName=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EditarPerfilActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ConfiguracoesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PedidosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TermosUsoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SenhaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FaleConoscoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ExcluirActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.PerfilProdutoActivity" />
        <activity
            android:name=".activity.DetalhesProdutoActivity"
            android:parentActivityName=".activity.MainActivity" />
    </application>

</manifest>